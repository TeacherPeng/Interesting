<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      WindowTitle="TextBlock Sample">

<StackPanel>
    <TabControl MinHeight="500" MinWidth="400">
        <TabItem Style="{StaticResource TabStyle}" Header="TextBlock" IsSelected="true">
        <TextBlock Background="Orange" FontFamily="Verdana" FontSize="14" FontWeight="Bold">
            Hello World!
        </TextBlock> 
        </TabItem>
        <TabItem Style="{StaticResource TabStyle}" Header="XAML Markup">
            <TextBlock Style="{StaticResource CodeSnippetParagraph}" xml:space="preserve">
&lt;TextBlock Background="Orange" FontFamily="Verdana" FontSize="24" FontWeight="Bold">
    Hello World!
&lt;/TextBlock> 
            </TextBlock>    
        </TabItem>       

        <TabItem Style="{StaticResource TabStyle}" Header="Description">
            <StackPanel>
            <TextBlock Style="{StaticResource HeaderStyle}">TextBlock Element Sample</TextBlock>
    
            <TextBlock Style="{StaticResource mainContentStyle}">TextBlock displays a block of text.</TextBlock>

            </StackPanel>

        </TabItem>    
            
    </TabControl>

    <TextBlock Style="{StaticResource mainContentStyle}">Â© Microsoft Corporation 2005. All rights reserved.</TextBlock>
</StackPanel>
    
</Page>