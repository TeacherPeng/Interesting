<Window x:Class="CreateDatastructureDatas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreateDatastructureDatas"
        mc:Ignorable="d"
        Title="数据结构数据生成器" Height="480" Width="640" Icon="resources/logo.ico">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="序列" Click="OnSequence_Click" />
            <Button Content="二叉树" Click="OnBiTree_Click" />
            <Button Content="连通图" Click="OnConnectedGraph_Click" />
            <Button Content="有向无环图" Click="OnDirectedAcyclicGraph_Click" />
            <Separator />
            <Label Content="数据量：" />
            <TextBox Text="{Binding DataCount}" MinWidth="50" />
            <Label Content="扰动次数：" />
            <TextBox Text="{Binding SwapCount}" MinWidth="50" />
        </ToolBar>
        <TextBox TextWrapping="Wrap" Text="{Binding Data}" VerticalScrollBarVisibility="Auto" />
    </DockPanel>
</Window>
